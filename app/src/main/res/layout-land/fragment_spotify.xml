<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playlist_select" />

        <Spinner
            android:id="@+id/playlist_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev"
            android:layout_row="2"
            android:layout_column="0"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/prev" />

        <Button
            android:id="@+id/play"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/note_play"
            android:textSize="11dp" />

        <Button
            android:id="@+id/next"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/next" />

        <Button
            android:id="@+id/pad1"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/A" />

        <Button
            android:id="@+id/pad2"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/Bb" />

        <Button
            android:id="@+id/pad3"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/B" />

        <Button
            android:id="@+id/pad4"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/C" />

        <Button
            android:id="@+id/pad5"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/Cs" />

        <Button
            android:id="@+id/pad6"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/D" />

        <Button
            android:id="@+id/pad7"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/Eb" />

        <Button
            android:id="@+id/pad8"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/E" />

        <Button
            android:id="@+id/pad9"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/F" />

        <Button
            android:id="@+id/pad10"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/Fs" />

        <Button
            android:id="@+id/pad11"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/G" />

        <Button
            android:id="@+id/pad12"
            android:width="75dp"
            android:height="70dp"
            android:text="@string/Ab" />

    </GridLayout>

</LinearLayout>